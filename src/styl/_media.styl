// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/

+max-screen(1100px)
	body
		font-size 16px
		
	.header
		padding-top 15px
		
	// Promo
	
	.promo
		&__block
			padding-bottom 500px
		&__img
			right -350px
			
+max-screen(1000px)
	.logo
		flex-direction column
		text-align center
		&__img
			margin-right 0
			margin-bottom 10px
			
	// Gift
	.gift__decor
		left -200px
		
	// Footer
	.footer
		&__text
			margin-bottom 5px
			&:last-child
				margin-bottom 0
		&__top
			.row
				justify-content center
			.col
				width 100%
				text-align center
				padding 0
				margin-bottom 20px
				&:last-child
					margin-bottom 0
				&.column
					align-items center
		&__contacts--phones-link
			margin-bottom 5px
			&_messangers
				span
					&:before
						left 100%
						right auto
						margin-right 0
						margin-left 5px
				
		&__contacts
			a
				white-space normal
				
		&__bottom
			.col
				&:first-child
					display none
		
+max-screen(767px)
	// Gift
	.gift
		font-size 100px
		transform translate(25px,30px)
		letter-spacing 10px
		&__decor
			display none
			
+max-screen(700px)
			
	.logo
	
		font-size 13px
		&__img
			max-width 120px
	
	.title
		text-align center
		font-size 13px
		
	body
		font-size 14px
		

	.promo
		&__block
			text-align center
			padding-top 60px
			padding-bottom 120px
		&__btn--block
			max-width 100%
			
		&__title
			padding-bottom 25px
			margin-bottom 25px
			&:before
				horisontal-center()
		&__subtitle
			font-size 1.125em		
		&__text
			margin-bottom 25px
			font-size 1em
		&__img
			position relative
			top auto
			right 0
			margin-top 30px
			
	.gift
		right auto
		left 50%
		transform translate(-50%, 22px)
		font-size 70px
+max-screen(600px)
	.btn
		&__content
			font-size 20px
		&__with-ic
			
			.btn__content
				padding 18px 15px
				background-position right 15px center
				background-size 44px 40px
				

	.footer__bottom
		.row
			flex-direction column
			align-items center
			text-align center
			
		.col
			width 100%
			margin-bottom 20px
			&:last-child
				margin-bottom 0

+max-screen(550px)
	//Gift
	.gift__block
		.row
			flex-direction column
			align-items center
			text-align center
			
	.gift
		&__content
			margin-bottom 100px
		&__img
			margin-right 0
			margin-bottom 20px		
		&__btn--block
			padding-left 0
			text-align center
			margin-top 0		
			
+max-screen(450px)
	.header
		.row
			flex-direction column
			align-items center
			
	.logo
		margin-bottom 20px
		
	.title
		width 100%
		
	// Promo
	.promo__block
		padding-top 40px
		padding-bottom 80px
		
	// Gift
	.gift
		font-size 50px
		right auto
		left 50%
		transform translate(-50%,14px)
		margin-left 5px