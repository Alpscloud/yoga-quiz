.form
	max-width 600px
	margin 40px auto
	
.input
	display block
	width 100%
	padding 10px 15px
	text-align left
	background-color $light-color
	border 2px solid transparent
	font 1em $Reg
	color $text-color
	&:hover,
	&:focus
		border-color $accent-color
	&::-webkit-input-placeholder
		font 1em $Reg
		color $text-color
	&::-moz-placeholder
		font 1em $Reg
		color $text-color
	&:-moz-placeholder
		font 1em $Reg
		color $text-color
	&:-ms-input-placeholder
		font 1em $Reg
		color $text-color
		
	&__wrapper
		margin-bottom 15px
		position relative
		
	&.is-error
		border-color red
	


.checkbox,
.radio
	position relative
	display inline-block
	margin-left 0
	padding-left 25px
	font 1em $Reg
	line-height 1
	color $text-color
	&:before,
	&:after
		pseudo()
		transition all .25s ease-in-out
		position absolute
		left 0
		vertical-center()
			
	&__label
		cursor pointer
		display inline-block
		input
			display none

.checkbox
	&:before
		border-radius 4px
		width 18px
		height 18px
		border 1px solid $accent-color
		background-color transparent
	&:after
		width 12px
		height 12px
		background url('../img/icons/svg/checkbox-ic.svg') 50% 50% no-repeat
		background-size 12px 12px
		position absolute
		left 3px
		top 8px
		opacity 0
	&__label
		input
			&:checked 
				+ span
					&:before
						border-color $dark-color
						background-color $dark-color
					&:after
						opacity 1
			
.radio
	&:before
	&:after
		border-radius 50%
	&:before
		width 18px
		height 18px
		border 1px solid $accent-color
		background-color $transparent
	&:after
		width 12px
		height 12px
		background-color $light-color
		left 3px
		top 8px
		opacity 0
		
	&__label
		input
			&:checked 
				+ span
					&:before
						border-color $dark-color
						background-color $dark-color
					&:after
						opacity 1

		