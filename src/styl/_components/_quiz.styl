$quiz-bg = #fff

	
$quiz-accent-color = #6f4170
$quiz-primary-color = #fbce19



$quiz-answer-elem-border-color = #6f4170

$quiz-grey-block-bg = #F3F3F3

$quiz-progress-bg = #fff
$quiz-progress-border-color = #6f4170





.quiz
	

	&__header
		margin-bottom 30px
		&--row
			position relative
			
	&__body
		padding 50px 0
		min-height 740px
		border-bottom 2px solid $primary-color
		
		

	&__progress
		margin-bottom 20px
		width 100%
		position relative
		overflow hidden
		border-radius 6px
		border 1px dashed $quiz-progress-border-color
		background-color $quiz-progress-bg	
		height 35px
		max-width 400px
		
		&--line
			display block
			position absolute
			height 100%
			left 0
			overflow hidden
			background-size 10px 100%
			background-color $quiz-accent-color
			background-image linear-gradient(center bottom, rgb($quiz-accent-color) 37%, rgb($quiz-accent-color) 69%)
			transition width .3s ease-in-out
			&:after
				pseudo()
				position absolute
				overflow hidden
				top 0
				left 0
				bottom 0
				right 0
				background-image linear-gradient(-45deg, rgba(255, 255, 255, .2) 25%, transparent 25%, transparent 50%, rgba(255, 255, 255, .2) 50%, rgba(255, 255, 255, .2) 75%, transparent 75%, transparent)
				z-index 1
				background-size 50px 50px
				animation move 2s linear infinite
		
		&--counter
			position absolute
			position-center()
			z-index 5
			color $primary-color
			font-family $ABold
			&-light
				color $light-color
	

	&__step
		display none
		&:first-child
			display block
		&--content
			display flex
			align-items flex-start
			justify-content space-between
		&--question
			font 1.5em $ABold
			padding-bottom 40px
			margin-bottom 25px
			position relative
			&:before
				pseudo()
				position absolute
				left 0
				bottom 0
				width 160px
				height 8px
				background-color $accent-color
			&-title
				text-transform uppercase
				color $primary-color
				font 2em $ABold
				margin-bottom 20px
			
		&--subtitle
			font-size 20px

		&--answers
			
			&-col
				width 520px
				padding-right 30px
				text-align left
				
		&--info
			&-col
				flex 1
				&_row
					.content__sm
						padding 20px
					.content__img
						flex none
				
			&-content
				min-height 350px
				position relative
				overflow hidden
				border 1px dashed $quiz-accent-color
				border-top-left-radius 6px
				border-top-right-radius 6px
				border-bottom none
				padding 20px
				&_start
					&-block
						&.is-hidden
							opacity 0
					img
						display block
						margin 0 auto
					p
						position relative
						display inline-block
						&:before
							pseudo()
							position absolute
							left -35px
							top -90px
							width 37px
							height 89px
							background url('../img/arrow.png') 50% 50% no-repeat / 37px 89px
							transform scaleX(-1) rotate(-115deg)
				&_block
					position absolute
					fullSize()
					z-index 2
					padding 25px 50px
					display flex
					justify-content flex-end
					align-items center
					opacity 0
					visibility hidden
					// transition all .17s ease-in-out
					&.is-active
						opacity 1
						visibility visible
				&_text
					border-radius 6px
					padding 60px 10px
					font-size 12px
					text-align left
					background-color $light-color
					max-width 230px
					p
						position relative
						padding-top 16px
						&:before
							pseudo()
							position absolute
							width 50px
							height 2px
							background-color $quiz-primary-color
							left 0
							top 0
				
			&-img
				width 100%
				height 350px
				&_decor
					margin-top 10px
					img
						display block
				
			&-advantages
				background-color $quiz-primary-color
				padding 20px
				text-align center
				&_title
					font-family $ABold
				
				.row
					max-width 560px
					margin 0 auto
			&-advantage
				width 50%
				padding 15px 15px 0 15px
				display flex
				align-items center
				flex-direction column
				font-family $Italic
				&_ic
					display block
					width 80px
					height 80px
					background-color #fff
					border-radius 50% 50%
					background-position 50% 50%
					background-size auto
					background-repeat no-repeat
					margin-bottom 5px
		

	&__answers
		&--columns
			display flex
			justify-content flex-start
			align-items flex-start
			&-col
				min-width 200px
				width 50%
				&:last-child
					margin-left 20px
				
			
	&__answer
		position relative
		display inline-block
		margin-left 0
		padding-left 30px
		color $text-color
		text-align left
		&:before,
		&:after
			pseudo()
			transition all .15s ease-in-out
			position absolute
			
		&:before
			width 19px
			height 19px
			border 1px solid $quiz-answer-elem-border-color
			top 2.5px
			left 0
		&:after
			width 11px
			height 11px
			background-color $quiz-accent-color
			opacity 0
			
		&--checkbox
			&:before
				border-radius 4px
				
				
			&:after
				left 5px
				top 4px
				border-radius 2px
				
				
		&--radio
			&:before,
			&:after
				border-radius 50%
				
			&:after
				top 6.5px
				left 4px
				
			&-transparent
				width 19px
				height 19px
				span
					opacity 0
				
	

		&--wrapper
			cursor pointer
			input
				display none
			&-block
				margin-bottom 22px
				&:last-child
					margin-bottom 0
				
	

			input:checked + span:after
				opacity 1
	
	&__checkbox
		display inline-block
		padding-left 40px
		font 12px $AReg
		color $text-color
		text-align left
		position relative
		&:before
			pseudo()
			position absolute
			left 0
			vertical-center()
			width 30px
			height 30px
			border 1px solid $quiz-accent-color
			border-radius 4px
		&:after
			pseudo()
			transition opacity .17s ease-in-out
			position absolute
			left 5px
			vertical-center()
			width 22px
			height 18px
			background url('../img/icons/svg/check.svg') 50% 50% no-repeat / 22px 18px
			opacity 0
		&--label
			display block
			cursor pointer
			input
				display none
				&:checked + span
					&:after
						opacity 1
	&__textarea
		display block
		border 1px dashed $quiz-accent-color
		border-radius 6px
		min-height 140px
		width 100%
		padding 15px
		font 1em $AReg
		&:focus
			border-color $quiz-primary-color
		&--wrapper
			display block
			flex 1
			max-width 460px	
			// padding-left 30px

	&__controls
		margin-top 22px
		
	&__btn
		font 1.2em $Italic
		background-color $quiz-primary-color
		display inline-block
		line-height 1
		transition all .17s ease-in-out
		backface-visibility hidden
		text-transform none
		border-radius 6px
		text-align center
		padding 22px 75px
		animation pulse 1s cubic-bezier(0, 0.04, 0.46, 1.34) infinite
		border 1px solid $quiz-primary-color
		position relative
		overflow hidden
		> span
			pointer-events none
			
		&.is-disabled
			background-color $light-color
			animation none
			pointer-events none
			.anim-btn1
				opacity 0
		&:disabled
			opacity 1
			color $text-color
			
	&__inputs
		position relative
		z-index 1
		width 100%
		max-width 300px
		.quiz__btn
			font-size 18px
		&--block
			position relative
			display flex
			justify-content flex-end
			img
				position absolute
				vertical-center()
				left 0
				width 490px
				
	&__input
		display block
		border-radius 6px
		border 1px dashed $quiz-accent-color
		width 100%
		font 20px $AReg
		color $text-color
		padding 15px 25px
		&:last-child
			margin-bottom 0
		&::-webkit-input-placeholder
			font 16px $Reg
			color rgba($text-color, .5)
		
		&::-moz-placeholder

			font 16px $Reg
			color rgba($text-color, .5)
		
		&:-moz-placeholder

			font 16px $Reg
			color rgba($text-color, .5)
		
		&:-ms-input-placeholder

			font 16px $Reg
			color rgba($text-color, .5)
			
		&:hover,
		&:focus
			border-color $quiz-primary-color
		&.is-error
			border-color red
			~ span
				opacity 1
				visibility visible
				
		&--wrapper
			margin-bottom 20px
			position relative
			&:last-child
				margin-bottom 0
				
		&--error
			color red
			font 14px $AReg
			display inline-block
			position absolute
			right 15px
			vertical-center()
			opacity 0
			pointer-events none
			visibility hidden
			transition all .17s ease-in-out
			
		
		&--label
			color $quiz-accent-color
			font 16px $ABold
			margin-bottom 15px
	&__final
		padding-bottom 270px
		padding-top 50px
		
		&--wrapper
			position relative
			background linear-gradient(to bottom, $quiz-primary-color 0%, $quiz-primary-color 100%) no-repeat
			background-position center top 330px
			background-size 100% 800px
			min-height 670px
			// padding-bottom 270px
			display none
			
			
		&--text
			position absolute
			z-index 2
			left 100%
			margin-left 60px
			text-align left
			width 320px
			top -70px
			&:before
				pseudo()
				position absolute
				left 0
				top 100%
				width 37px
				height 89px
				background url('../img/arrow.png') 50% 50% no-repeat / 37px 89px
				transform rotate(75deg)
		&--content
			position relative
			&-block
				max-width 500px
				position relative
				z-index 2
				&-wide
					max-width 800px
		&--title
			color $quiz-accent-color
			font 1.95em $ABold
			text-transform uppercase		
			&-block
				position relative
				margin-top 30px
				margin-bottom 15px
				padding-left 80px
				&:before
					pseudo()
					position absolute
					left 0
					top 10px
					background url('../img/icons/complete.png') center center no-repeat / 64px 70px
					width 64px
					height 70px
			
		&--subtitle
			font 1.5em $ABold	
			margin-top 35px	
		&--img
			position absolute
			right -60px
			top -80px
			text-align center

			
			img
				display block
				margin-bottom 15px

				
		&--methods
			background-color $light-color
			border-radius 6px
			border 1px dashed $quiz-accent-color
			padding 30px 25px
			position relative
			&-img
				position absolute
				horisontal-center()
				top 100%
				margin-top 20px
				img
					display block
					max-width 220px
		
		&--inputs
			padding 25px 25px 0 25px
			display none
			
	&__success
		display none
		padding-bottom 110px
		padding-top 50px
		&--img
			top 20px
			right -45px
			img
				opacity .52		
	&__methods--row
		margin-left -12.5px
		margin-right -12.5px
		margin-top 17.5px
		padding 0 25px
	&__method
		display inline-block
		position relative
		width 19px
		height 19px
		border-radius 50%
		border 1px solid $quiz-answer-elem-border-color
		&:before
			pseudo()
			transition all .15s ease-in-out
			position absolute
			border-radius 50%
			width 11px
			height 11px
			position-center()
			background-color $quiz-accent-color
			opacity 0 
			
		&--label
			text-align center
			display flex
			flex-direction column
			align-items center
			cursor pointer
			width 25%
			padding 12.5px 12.5px 0 12.5px
			&-text
				font-size 12px
				display inline-block
				margin-bottom 7px
			input
				display none
				&:checked + span
					&:before
						opacity 1
		&--ic
			display block
			background-position 50% 50%
			background-repeat no-repeat
			background-size 55px 55px
			border-radius 6px
			width 72px
			height 72px
			margin 0 auto 7px auto
			&-whatsapp
				background-color #7fc241
			&-viber
				background-color #6f4170
			&-telegram
				background-color #00bff3
			&-email
				background-color #2e3192
		
	&__contacts
		margin-top 190px
		max-width 800px
		p
			margin-bottom 20px
		a
			color $text-color
			font-family $ABold
			&:hover
				color $light-color
@keyframes move 
	0% 
		background-position 0 0
	100% 
		background-position 50px 50px
		
@keyframes pulse
	0%
		transform scale(1.01,1.01)
	50%
		transform scale(1, 1)
	100%
		transform scale(1.01,1.01)



.master
	&__block
		position relative
		
		.master__info
			position absolute
			right -22px
			vertical-center()
			z-index -1
	&__content
		max-width 400px
		text-align left
		
	&__info
		width 260px
		img
			display block
			max-width 260px
			margin 0 auto 15px auto
		p
			font-size 12px
			
		b
			font-family $ABold
			

		

.link
	color $primary-color
	position relative
	padding-right 22px
	font 15px $Italic
	line-height 1
	&:after
		pseudo()
		position absolute
		margin-top 1px
		top 50%
		transform translate(0,-50%)
		right 0
		width 16px
		height 11px
		background url('../img/icons/link-arrow.png') 50% 50% no-repeat / 16px 11px
		transition transform .17s ease-in-out
	span
		display inline-block
		line-height 1
		
	&:hover
		&:after
			transform translate(5px, -50%)
		
	