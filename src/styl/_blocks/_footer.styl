.footer
	background-color $footer-bg

	&__top
		padding 35px 0
		
	&__text
		a
			color inherit
			
			&:hover
				color $accent-color
				

	&__contacts
		a
			white-space nowrap
		&--phones-link
			position relative
			display inline-block
			color $text-color
			font-family $ABold
			&:hover
				color $accent-color
			&_wrapper
				position relative
				padding-left 58px
				margin-left -58px
			&_messangers
				position absolute
				left 0
				vertical-center()
				width 58px
				height 25px
				margin-right 6px
			&_messanger
				display inline-block
				width 25px
				height 25px
				background-image url('../img/icons/messangers.png')
				background-repeat no-repeat
				&:hover
					opacity .7
				
				
			&_whatsapp
				background-position 0 0
			&_viber
				background-position -33px 0
				
